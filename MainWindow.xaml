<Window x:Class="DRM_Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Daily Report Manager" Height="528" Width="756"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Segoe UI">

    <Window.Resources>
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="15" ShadowDepth="5" Direction="270" Opacity="0.3"/>
    </Window.Resources>

    <Grid>
        <!-- Card Container -->
        <Border CornerRadius="20" Padding="25" Margin="20" Background="White" Effect="{StaticResource ShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="54"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Settings Icon -->
                <Button Width="66" Height="54" HorizontalAlignment="Left" VerticalAlignment="Center" 
                        Margin="576,0,0,0" BorderThickness="0" Background="Transparent" Cursor="Hand"
                        Click="OpenSettings_Click" RenderTransformOrigin="0.518,0.51">
                    <Image x:Name="RotatingImage"
       Source="D:\softwares\PRASANNA\DRM_Management\setting_icon_237775.png"
       Width="40"
       Height="46"
       Stretch="Uniform"
       RenderTransformOrigin="0.0,0.0"
       MouseEnter="RotatingImage_MouseEnter"
       MouseLeave="RotatingImage_MouseLeave">

                        <Image.RenderTransform>
                            <RotateTransform x:Name="ImageRotateTransform" Angle="0"/>
                        </Image.RenderTransform>
                    </Image>



                </Button>

                <!-- Main Content -->
                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <TextBlock Text="Daily Report Management" FontSize="28" FontWeight="Bold"
                               Foreground="#2D3436" HorizontalAlignment="Center"/>
                    <Separator Margin="0,10,0,10"/>

                    <StackPanel Orientation="Vertical">

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Date:" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <Border Grid.Column="1" CornerRadius="5" Background="#F0F3F4" BorderBrush="#3498DB" BorderThickness="1" Margin="0,0,101,0">
                                <DatePicker x:Name="DateInput" SelectedDate="{x:Static sys:DateTime.Today}" Height="30" Background="Transparent" Margin="0,0,9,0"/>
                            </Border>
                        </Grid>



                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Activity:" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox x:Name="ActivityInput" Grid.Column="1" Height="30" Text="Enter activity..." Margin="0,0,101,0" GotFocus="ActivityInput_GotFocus" LostFocus="ActivityInput_LostFocus"/>
                        </Grid>



                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="Status:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox x:Name="StatusInput" Width="250" Height="30" SelectionChanged="StatusInput_SelectionChanged">
                                <ComboBoxItem Content="Completed"/>
                                <ComboBoxItem Content="In Progress"/>
                                <ComboBoxItem Content="Pending"/>
                            </ComboBox>
                        </StackPanel>


                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Comments:" Grid.Column="0" VerticalAlignment="Top" FontWeight="SemiBold"/>
                            <TextBox x:Name="CommentsInput" Grid.Column="1" Height="80" AcceptsReturn="True" 
               TextWrapping="Wrap" FontSize="14" Padding="5" Background="#F0F3F4"
               BorderBrush="#3498DB" BorderThickness="1" Text="Enter comments..." Margin="0,0,101,0" LostFocus="CommentsInput_LostFocus" GotFocus="CommentsInput_GotFocus">
                            </TextBox>
                        </Grid>


                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">



                            <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click" Width="130" Height="40" Margin="10,0"
                   Background="#27AE60" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#2ECC71"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#1E8449"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>



                            <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="130" Height="40" Margin="10,0"
                   Background="#E74C3C" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#EC7063"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#C0392B"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>



                            <Button x:Name="SendEmailButton" Content="Send Email" Width="130" Height="40" Margin="10,0"
                   Background="#2980B9" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                   Click="SendEmailButton_Click1">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#3498DB"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#1F618D"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="ReplyToAllEmailButton" Content="ReplyTo AllEmail" Width="130" Height="40" Margin="10,0"
Background="MediumPurple" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
Click="SendEmailButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#3498DB"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#1F618D"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>