<Window x:Class="DRM_Management.EmailPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Send Email"
        Height="418"
        Width="492"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="479*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.RowSpan="2">

            <StackPanel Orientation="Horizontal" Margin="0,5" Width="440">
                <TextBlock Text="To:" Width="63" VerticalAlignment="Center" FontWeight="SemiBold" Height="28"/>
                <ComboBox x:Name="ToEmailDropdown" Width="285" Height="30" SelectionChanged="ToEmailDropdown_SelectionChanged_1" FontSize="16"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" Margin="0,5" Width="440">
                <TextBlock Text="CC:" Width="63" VerticalAlignment="Center" FontWeight="SemiBold" Height="22"/>
                <ComboBox x:Name="CcEmailDropdown" Width="286" Height="30"  SelectionChanged="CcEmailDropdown_SelectionChanged" FontSize="16"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="437" Height="40">
                <TextBlock Text="Subject:" FontWeight="SemiBold" Margin="0,10" Width="62"/>
                <TextBox x:Name="SubjectInput" Height="30" FontSize="16" Width="350"/>
            </StackPanel>

            <Grid Height="202" Width="457">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="457"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Content:" VerticalAlignment="Top" FontWeight="SemiBold" Margin="10,27,343,0"/>
                <TextBox x:Name="ContentInput" Margin="74,35,36,30" FontSize="16" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            </Grid>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,10,0,0" Width="280">
                <Button x:Name="SendButton" Content="Send" Width="120" Height="35" Background="#2980B9" Foreground="White" FontWeight="Bold" Margin="5" Click="SendButton_Click" Opacity="0.995"/>
                <Button x:Name="CancelButton" Content="Cancel" Width="120" Height="35" Background="#E74C3C" Foreground="White" FontWeight="Bold" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

